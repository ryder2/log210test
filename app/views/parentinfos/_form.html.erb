<%= simple_form_for(@parentinfo) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :courriel %>

    <%= f.input :numero_tel %>

    <%= f.input :nocivique %>

    <%= f.input :rue %>

    <%= f.input :appartement %>

    <%= f.input :ville %>

    <%= f.input :code_postal %>

    <%= f.input :province %>

    <%= f.input :nom_urgence %>

    <%= f.input :numero_urgence %>

    <%= f.input :note %>

    <%= f.input :parent_id %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
